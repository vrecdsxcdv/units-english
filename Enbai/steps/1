/* ========== –®–ê–ì 3: It-cleft ‚Äî –ü—Ä–∞–∫—Ç–∏–∫–∞ ========== */
function Step3() {
  const items: FillItem[] = [
    {
      left: "1. Normal: Sarah called me yesterday. ‚Üí Cleft: It",
