/* ========== –®–ê–ì 6: It-cleft vs Wh-cleft ‚Äî –°—Ä–∞–≤–Ω–µ–Ω–∏–µ ========== */
function Step6() {
  const [selectedType, setSelectedType] = useState(0);

  const comparisons = [
    {
      situation: "–ù—É–∂–µ–Ω –æ—Ç–¥—ã—Ö",
      itCleft: "It's rest that I need.",
      whCleft: "What I need is rest.",
      difference: "It-cleft –±–æ–ª–µ–µ —Ñ–æ—Ä–º–∞–ª—å–Ω—ã–π, Wh-cleft –±–æ–ª–µ–µ –µ—Å—Ç–µ—Å—Ç–≤–µ–Ω–Ω—ã–π",
    },
    {
      situation: "–î–∂–æ–Ω —Ä–∞–∑–±–∏–ª –æ–∫–Ω–æ",
      itCleft: "It was John who broke the window.",
      whCleft: "The person who broke the window was John.",
      difference: "It-cleft –∫–æ—Ä–æ—á–µ –∏ —á–∞—â–µ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è",
    },
    {
      situation: "–•–æ—á—É –Ω–æ–≤—É—é —Ä–∞–±–æ—Ç—É",
      itCleft: "It's a new job that I want.",
      whCleft: "What I want is a new job.",
      difference: "Wh-cleft –∑–≤—É—á–∏—Ç –±–æ–ª–µ–µ —Ä–∞–∑–≥–æ–≤–æ—Ä–Ω–æ",
    },
  ];

  const current = comparisons[selectedType];

  return (
    <>
      <UiSection title="‚öñÔ∏è It-cleft vs Wh-cleft ‚Äî –í —á–µ–º —Ä–∞–∑–Ω–∏—Ü–∞?">
