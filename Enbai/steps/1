/* ========== –®–ê–ì 8: All that-cleft (The thing that...) ========== */
function Step8() {
  return (
    <>
      <UiSection title="üì¶ All that / The thing that ‚Äî –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–∞ Wh-cleft">
