generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DB_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())

  // Progress tracking as JSON: { a1: ["topic1", "topic2"], b1: ["topic3"], b2: [] }
  progress  String?  @default("{}")

  // Streak tracking (like Duolingo)
  streak         Int      @default(0)
  lastActiveDate String?  // Format: "YYYY-MM-DD"

  // Admin controls
  isBanned      Boolean   @default(false)

  // relations
  assessmentProgress AssessmentProgress?
  answers   PlacementAnswer[]
  conversations ChatConversation[]
  topicCompletions TopicCompletion[]
  accounts Account[]
  sessions Session[]
  lessonProgress LessonProgress[]
  skillVector SkillVector?
  memories UserMemory[]
}

// === Placement test progress tracking ===
model AssessmentProgress {
  id           String   @id @default(cuid())
  userId       String   @unique
  // ход теста
  index        Int      @default(0)   // текущий вопрос (0-базный)
  total        Int      @default(100)
  answersJson  Json?                // пользовательские ответы/лог
  // результат
  completedAt  DateTime?
  score        Int?                 // сырой балл
  level        String?              // "A1" | "A2" | "B1" | "B2" | "C1" - текущий уровень
  startLevel   String?              // "A1" | "A2" | "B1" | "B2" | "C1" - начальный уровень (при первом прохождении)
  recJson      Json?                // слепок рекомендаций для /learn
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PlacementAnswer {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  choice     String    // для gap — введённый текст
  correct    Boolean
  weight     Int       @default(1)
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])

  @@unique([userId, questionId])
}

// === Lesson progress for stepper lessons ===
model LessonProgress {
  id             String   @id @default(cuid())
  userId         String
  level          String   // "a1", "b1", "b2"
  completedTopics String[] @default([])
  streak         Int      @default(0)
  lastStudyDate  DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, level])
  @@index([userId, level])
}

// === AI Tutor Chat History ===
model ChatConversation {
  id            String   @id @default(cuid())
  userId        String
  mode          String   // "general" | "lesson" | "practice"
  title         String?  // Автогенерируемый заголовок
  status        String   @default("active") // "active" | "archived"

  // Статистика
  messageCount  Int      @default(0)
  totalTokens   Int      @default(0)

  // Session tracking
  sessionPhase  String   @default("ONBOARDING") // "ONBOARDING" | "TEACHING"

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      ChatMessage[]
  summaries     ChatSummary[]

  @@index([userId, status])
  @@index([userId, updatedAt])
}

model ChatMessage {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" | "assistant" | "system"
  content        String
  seqNum         Int      @default(0) // Порядковый номер в чате (временно default для миграции)
  tokenCount     Int?
  timestamp      DateTime @default(now())

  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sourceMemories UserMemory[] // Memories извлечённые из этого сообщения

  @@index([conversationId, seqNum])
}

// Rolling summaries для длинных чатов
model ChatSummary {
  id             String   @id @default(cuid())
  conversationId String
  summary        String
  fromSeqNum     Int      // С какого сообщения
  toSeqNum       Int      // По какое сообщение
  originalTokens Int?
  summaryTokens  Int?
  createdAt      DateTime @default(now())

  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

// === Skill Vector (10D) ===
model SkillVector {
  id            String   @id @default(cuid())
  userId        String   @unique

  // 10 навыков (0.0 - 1.0)
  grammar       Float    @default(0.3)
  vocabulary    Float    @default(0.3)
  pronunciation Float    @default(0.3)
  listening     Float    @default(0.3)
  speaking      Float    @default(0.3)
  slang         Float    @default(0.2)
  wordFormation Float    @default(0.2)
  fluency       Float    @default(0.2)
  writing       Float    @default(0.3)
  comprehension Float    @default(0.3)

  // Метаданные
  lastAssessedAt DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// === User Memories (долгосрочные факты об ученике) ===
model UserMemory {
  id              String   @id @default(cuid())
  userId          String

  memoryType      String   // "fact" | "preference" | "goal" | "skill_note" | "context"
  content         String   // Текст факта: "работает в IT", "любит краткие объяснения"

  // Важность и использование
  importance      Float    @default(0.5) // 0-1
  accessCount     Int      @default(0)
  lastAccessedAt  DateTime?

  // Источник
  sourceMessageId String?
  sourceMessage   ChatMessage? @relation(fields: [sourceMessageId], references: [id], onDelete: SetNull)

  isActive        Boolean  @default(true)
  expiresAt       DateTime? // NULL = бессрочно

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isActive])
  @@index([userId, memoryType])
}

// === Topic Completion Tracking ===
model TopicCompletion {
  id          String   @id @default(cuid())
  userId      String
  level       String   // "a1", "b1", "b2"
  topicId     String   // e.g. "articles", "presentsimple"
  completedAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, level, topicId])
  @@index([userId, level])
}

// === Reviews ===
model Review {
  id        String   @id @default(cuid())
  userName  String   // User's display name
  text      String   // Review text (10-500 chars)
  rating    Int      @default(5) // Rating from 1 to 5 stars
  isTrue    Boolean  @default(false) // Approved by admin
  createdAt DateTime @default(now())

  @@index([isTrue, createdAt])
}

// === NextAuth OAuth Models ===
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// === Password Reset Tokens ===
model PasswordResetToken {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([token])
}

// === Email Verification Codes ===
model EmailVerificationCode {
  id         String   @id @default(cuid())
  email      String
  code       String   // 6-digit verification code
  expires    DateTime
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([email, code])
}

// === Pending Registration (before email verification) ===
model PendingRegistration {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String   // hashed password
  name       String
  code       String   // 6-digit verification code (e.g., "123456")
  expires    DateTime // code expiration (15 minutes)
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([email, code])
}
